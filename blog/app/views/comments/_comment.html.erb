<div class="container">
  <p>
    <span class="label label-info">
      <%= comment.commenter %>:
    </span>
  </p>
   
  <p>
    <%= comment.body %>
  </p>

  <p>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                [comment.article, comment],
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </p>
</div>